  function tryInit() {
    // Solo se la socket Ã¨ chiusa e siamo in ambiente android
    if (socketClosed) {
      init();
    }
  }
  // Creating the websocket
  var ua = navigator.userAgent.toLowerCase();
  var isAndroid = ua.indexOf("android") > -1; //&& ua.indexOf("mobile");
  if (isAndroid) {
    setInterval(tryInit, 1500);
  }
</script>
